{
    "editor.tabSize": 4,
    "editor.insertSpaces": true,
    "editor.formatOnSave": true,
    "editor.trimAutoWhitespace": true,
    "clangd.arguments": [
        "--compile-commands-dir=./build",
    ],
    "editor.semanticTokenColorCustomizations": {
        "enabled": true,
        "rules": {
            "comment": "#505050",
        }
    },
    "cSpell.words": [
        "cmake",
        "codecov",
        "GCOVR"
    ]
}
